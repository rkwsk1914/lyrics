  <% if current_user.likes?(lyric) %>
    <%= form_with(model: current_user.favorites.find_by(lyric_id: lyric.id), local: true, method: :delete) do |f| %>
      <%= hidden_field_tag :lyric_id, lyric.id %>
      <%= f.submit 'Unfavorite', class: 'btn btn-danger btn-block' %>
    <% end %>
  <% else %>
    <%= form_with(model: current_user.favorites.build, local: true) do |f| %>
      <%= hidden_field_tag :lyric_id, lyric.id %>
      <%= current_user.likes?(lyric) %>
      <%= f.submit 'favorite', class: 'btn btn-primary btn-block' %>
    <% end %>
  <% end %>