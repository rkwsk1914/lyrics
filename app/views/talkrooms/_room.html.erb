<div class="col-12 col-sm-9 offset-sm-2">
    <div class="d-flex justify-content-start">
        <div class="col-3">
            <%= render 'talkrooms/talkroom_list' %>
        </div>
        <% unless op == "talkroom_top" %>
            <div class="col-9 p-0 my-4">
                <%= render 'messages/message_list' %>
                <%= render 'messages/message_form', message: @message %>
            </div>
        <% end %>
    </div>
</div>