<div class="row">
    <div class="col-sm-12">
        <h1 class="text-center col-sm-12 pt-3 pb-3">Log in</h1>
        <%= form_with(url: login_path, scope: :session, local: true) do |form| %>

            <div class="form-group row">
                <div class="col-sm-2">
                    <%= form.label :email, 'Email', class: 'col-form-label' %>
                </div>
                <div class="col-sm-10">
                    <%= form.email_field :email, class: 'form-control', placeholder: '登録したメールアドレス / Registered email address.' %>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-2">
                    <%= form.label :password, 'Password', class: 'col-form-label' %>
                </div>
                <div class="col-sm-10">
                    <%= form.password_field :password, class: 'form-control', placeholder: '8文字以上のパスワード/ password is at least 8 characters.' %>
                </div>
            </div>
            <div class="form-group row d-flex justify-content-center">
                <%= form.submit 'Log in', class: 'btn btn-secondary btn-block col-3' %>
            </div>
        <% end %>
        <div class="d-flex justify-content-end">
            <%= link_to 'Back', root_url, class: 'btn btn-light btn-block col-3' %>
        </div>
    </div>
</div>