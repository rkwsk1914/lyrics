<div class="border">
    <h4 class="text-center p-2"><%= lyric.title %></h4>
    <p class="text-right px-2">Lyric by <%= user.name %></p>
    <p class="text-right px-2"><%= l lyric.created_at, format: :long %></p>
    <section class="my-3 mh-75 p-2" style="white-space: pre-line;">
        <%= @lyric.content %>
    </section>
</div>
<div class="my-3">
    <h6>作者からのコメント</h6>
    <section class="border my-3 p-2" style="white-space: pre-line;">
        <%= @lyric.comment %>
    </section>
</div>