<%= form_with(model: lyric, local: true) do |form| %>
    <%= render 'layouts/error_message', model: lyric %>
    <div class="form-group row">
        <div class="col-sm-2">
            <%= form.label :title, 'Title', class: 'col-form-label col-form-label' %>
        </div>
        <div class="col-sm-10">
            <%= form.text_field :title, class: 'form-control', placeholder: '題名 / Title' %>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-2">
            <%= form.label :content, 'Lyric', class: 'col-form-label col-form-label' %>
        </div>
        <div class="col-sm-10">
            <%= form.text_area :content, class: 'form-control', size: "30x10" %>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-2">
            <%= form.label :comment, 'Comment', class: 'col-form-label col-form-label' %>
        </div>
        <div class="col-sm-10">
            <%= form.text_area :comment, class: 'form-control', size: "30x3", placeholder: '歌詞にこめたあなたのメッセージを！ / A message in your lyrics!' %>
        </div>
    </div>
    <div class="form-group row d-flex justify-content-around">
        <%= form.submit @op, class: 'btn btn-block col-3 offset-4', id: 'submit'%>
        <%= link_to 'Back', user_path(current_user), class: 'btn btn-light btn-block col-3 m-0' %>
    </div>
<% end %>