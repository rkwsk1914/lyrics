<%= form_with(model: lyric, local: true) do |form| %>
    <%= render 'layouts/error_message', model: lyric %>
    <div class="form-group row">
        <div class="col-sm-2">
            <%= form.label :title, 'Title', class: 'col-form-label col-form-label' %>
        </div>
        <div class="col-sm-10">
            <%= form.text_field :title, class: 'form-control' %>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-2">
            <%= form.label :content, 'Lyric', class: 'col-form-label col-form-label' %>
        </div>
        <div class="col-sm-10">
            <%= form.text_area :content, class: 'form-control', size: "30x10" %>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-2">
            <%= form.label :comment, 'Comment', class: 'col-form-label col-form-label' %>
        </div>
        <div class="col-sm-10">
            <%= form.text_field :comment, class: 'form-control' %>
        </div>
    </div>
    <div class="form-group row d-flex justify-content-center">
        <%= form.submit @op, class: 'btn btn-secondary btn-block col-3' %>
    </div>
<% end %>
<div class="d-flex justify-content-end">
    <%= link_to 'Back', user_path(current_user), class: 'btn btn-light btn-block col-3' %>
</div>