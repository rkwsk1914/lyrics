<%= stylesheet_link_tag "layouts/navbar", :media => "all" %>

<header>
    <nav class="position-fixed col-12 navbar navbar-expand-sm navbar-light border-bottom px-0 bg-white" style="z-index: 3;">
        <!-- ロゴ -->
         <%= link_to lyrics_path, class: "navbar-brand col-2 offset-1", id: 'logo' do %>
            <span>L</span>
            <span>y</span>
            <span>r</span>
            <span>i</span>
            <span>c</span>
            <span>s</span>
         <% end %>
        
        <!-- 横幅が狭い時に出るハンバーガーボタン -->
        <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#nav-bar">
            <span class="navbar-toggler-icon"></span>
        </button>
        
        <!-- メニュー項目 -->
        <div class="collapse navbar-collapse offset-7 col-2 text-center" id="nav-bar">
            <ul class="navbar-nav d-sm-block d-none">
                <li class="dropdown">
                    <button 
                     type="button" 
                     class="dropdown-toggle mr-2 btn btn-primary text-white" 
                     data-toggle="dropdown" 
                     aria-haspopup="true" 
                     aria-expanded="false" 
                     role="button"
                     id="navbarDropdownBtn"
                    >
                        MENU
                    </button>
                    <div class="dropdown-menu " id="menu" aria-labelledby="navbarDropdownBtn">
                        <%= link_to 'TOP', lyrics_path, class: "dropdown-item" %>
                        <%= link_to 'Mypage', user_path(current_user), class: "dropdown-item" %>
                        <%= link_to 'Lyric POST', new_lyric_path, class: "dropdown-item" %>
                        <div class="dropdown-divider"></div>
                        <%= link_to 'Logout', logout_path, method: :delete, class: "dropdown-item" %>
                    </div>
                </li>
            </ul>
            <ul class="navbar-nav d-sm-none d-block">
                <li class="nav-item">
                    <div class="" id="menu" aria-labelledby="navbarDropdown">
                        <%= link_to 'TOP', lyrics_path, class: "nav-link dropdown-item col-2" %>
                        <%= link_to 'Mypage', user_path(current_user), class: "nav-link dropdown-item col-2" %>
                        <%= link_to 'Lyric POST', new_lyric_path, class: "nav-link dropdown-item col-2" %>
                        <div class="dropdown-divider col-2"></div>
                        <%= link_to 'Logout', logout_path, method: :delete, class: "nav-link dropdown-item col-2" %>
                    </div>
                </li>
            </ul>
        </div>
    </nav>
</header>