<h1 class="text-center my-3"><%= @lyric.title %> Request</h1>
<div class="col-12 col-sm-9 offset-sm-2">
    <%= form_with(model: @apply, local: true) do |form| %>
        <%= render 'layouts/error_message', model: @apply %>
        <div class="form-group row">
            <div class="col-sm-2">
                <%= form.label :comments, 'request message', class: 'col-form-label col-form-label' %>
            </div>
            <div class="col-sm-10">
                <%= form.text_area :comments, class: 'form-control', size: "30x10" %>
            </div>
        </div>
        <!--<div class="form-group row">
            <div class="col-sm-2">
                <%#= form.label :musicdata, 'musicdata', class: 'col-form-label col-form-label' %>
            </div>
            <div class="col-sm-10">
                <%#= form.file_field :musicdata, accept:"audio/mp3", class: 'form-control' %>
            </div>
        </div>-->
        <%= hidden_field_tag :lyric_id, @lyric.id %>
        <div class="form-group row d-flex justify-content-around">
            <%= form.submit @op, class: 'btn btn-secondary btn-block col-3 offset-4' %>
            <%= link_to 'Back', user_path(current_user), class: 'btn btn-light btn-block col-3 m-0' %>
        </div>
    <% end %>
</div>