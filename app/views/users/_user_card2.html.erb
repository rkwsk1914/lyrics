<div class="row">
    <div class="col-12">
        <!-- Button trigger modal -->
        <a data-toggle="modal" data-target="#staticBackdrop" style="cursor: pointer;">
            <% if user.image? %>
                <img src="<%= user.image.url %>" class="border card-img-top rounded-circle" style="width: 14rem; height: 14rem;">
            <% else %>
                <p class="border card-img-top rounded-circle" style="width: 14rem; height: 14rem;"></p>
            <% end %>
        </a>

        <!-- Modal -->
        <div class="modal bd-example-modal-sm fade" id="staticBackdrop" data-backdrop="static" tabindex="-1" role="dialog" aria-labelledby="staticBackdropLabel" aria-hidden="true">
            <div class="modal-dialog modal-sm" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="staticBackdropLabel"><%= user.name %></h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                             <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <div class="row d-flex justify-content-start pl-3">
                            <% if user.image? %>
                                <img src="<%= user.image.url %>" class="border card-img-top rounded-circle mx-3" style="width: 4rem; height: 4rem;">
                                </img>
                            <% else %>
                                <p class="border card-img-top rounded-circle bg-info" style="width: 14rem; height: 14rem;"></p>
                            <% end %>
                            <table>
                                <tbody>
                                    <tr>
                                        <th class="col-2"><%= link_to 'Follows', followings_user_path(user), style: "text-decoration: none;"%></th>
                                        <th class="col-2"><span class="badge badge-secondary"><%= @count_followings %></span></th>
                                    </tr>
                                    <tr>
                                        <th class="col-2"><%= link_to 'Followers', followers_user_path(user), style: "text-decoration: none;"%></th>
                                        <th class="col-2"><span class="badge badge-secondary"><%= @count_followers %></span></th>
                                    </tr>
                                    <tr>
                                        <th class="col-2"><%= link_to 'Followers', likes_user_path(user), style: "text-decoration: none;"%></th>
                                        <th class="col-2"><span class="badge badge-secondary"><%= @count_likes %></span></th>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                        <hr>
                        <div class="pl-3">
                            <h6>profile</h6>
                            <p><%= user.profile %></p>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        <%= link_to 'Edit', edit_user_path, class: "btn btn-light" %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>