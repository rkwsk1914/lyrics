<div class="d-flex justify-content-center py-3">
    <%= render 'users/user_image_button',rem: "4rem", user: @user %>
    <h1 class="text-center mt-1">User</h1>
</div>
<div class="col-12 col-sm-9 offset-sm-2">
    <%= form_with(model: @user, local: true) do |form| %>
        <%= render 'layouts/error_message', model: @user %>
        <div class="form-group row">
            <div class="col-sm-2" style="font-size: 0.8em;">
                <%= form.label :name, 'Name', class: 'col-form-label col-form-label' %>
            </div>
            <div class="col-sm-10">
                <%= form.text_field :name, class: 'form-control' %>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-2">
                <%= form.label :email, 'Email', class: 'col-form-label' %>
            </div>
            <div class="col-sm-10">
                <%= form.email_field :email, class: 'form-control'%>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-2">
                <%= form.label :profile, 'Profile', class: 'col-form-label' %>
            </div>
            <div class="col-sm-10">
                <%= form.text_area :profile, class: 'form-control', rows: "5" %>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-2">
                <%# form.label :picture, 'Profile image', class: 'col-form-label' %>
            </div>
            <div class="col-sm-10">
                <%= form.file_field :picture, accept: "image/png, image/jpeg, image/gif", class: 'form-control p-1' %>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-2">
                <%= form.label :password, 'New Password', class: 'col-form-label' %>
            </div>
            <div class="col-sm-10">
                <%= form.password_field :password, class: 'form-control', placeholder: '8文字以上のパスワード/ password is at least 8 characters.' %>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-2">
                <%= form.label :password_confirmation, 'Confirmation', class: 'col-form-label' %>
            </div>
            <div class="col-sm-10">
                <%= form.password_field :password_confirmation, class: 'form-control', placeholder: '8文字以上のパスワード/ password is at least 8 characters.' %>
            </div>
        </div>
        <div class="form-group row d-flex justify-content-around">
            <%= form.submit 'Save', class: 'btn btn-secondary btn-block offset-4 col-3' %>
            <%= link_to 'Back', @user, class: 'btn btn-light btn-block col-3' %>
        </div>
    <% end %>
</div>