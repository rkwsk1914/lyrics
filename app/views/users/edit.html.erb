<div class="row">
    <div class="col-sm-12">
        <h1 class="text-center col-sm-12 pt-3 pb-3">Pofile</h1>
        <%= form_with(model: @user, local: true) do |form| %>
            <%= render 'layouts/error_message', model: @user %>
            <div class="form-group row">
                <div class="col-sm-2">
                    <%= form.label :name, 'Name', class: 'col-form-label col-form-label' %>
                </div>
                <div class="col-sm-10">
                    <%= form.text_field :name, class: 'form-control' %>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-2">
                    <%= form.label :email, 'Email', class: 'col-form-label' %>
                </div>
                <div class="col-sm-10">
                    <%= form.email_field :email, class: 'form-control'%>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-2">
                    <%= form.label :profile, 'Pofile', class: 'col-form-label' %>
                </div>
                <div class="col-sm-10">
                    <%= form.text_area :profile, class: 'form-control' %>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-2">
                    <%= form.label :password, 'New Password', class: 'col-form-label' %>
                </div>
                <div class="col-sm-10">
                    <%= form.password_field :password, class: 'form-control' %>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-2">
                    <%= form.label :password_confirmation, 'Confirmation', class: 'col-form-label' %>
                </div>
                <div class="col-sm-10">
                    <%= form.password_field :password_confirmation, class: 'form-control' %>
                </div>
            </div>
            <div class="form-group row d-flex justify-content-center">
                <%= form.submit 'save profile', class: 'btn btn-secondary btn-block col-3' %>
            </div>
        <% end %>
        <div class="d-flex justify-content-end">
            <%= link_to 'Back', @user, class: 'btn btn-light btn-block col-3' %>
        </div>
    </div>
</div>