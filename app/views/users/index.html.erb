<% if @users.any? %>
    <ul class="list-unstyled">
        <% @users.each do |user| %>
            <li class="media">
                <img src="<%= gravatar_url(user, { size: 50 }) %>" class="mr-3" alt="...">
                <div class="media-body">
                  <h5 class="mt-0 mb-1"><%= user.name %></h5>
                  <%= user.email %>
                  <%= user.profile %>
                </div>
            </li>
        <% end %>
    </ul>
<% end %>
