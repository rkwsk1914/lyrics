<%= form_with(model: message, local: true) do |form| %>
    <% render 'layouts/error_message', model: message %>
    <div class="form-group row">
        <div class="col-sm-10">
            <%= form.text_area :content, class: 'form-control', size: "10x1" %>
        </div>
        <%= hidden_field_tag :talkroom_id, @sentroom.id %>
    </div>
    <div class="form-group row d-flex justify-content-around">
        <%= form.submit @op, class: 'btn btn-secondary btn-block col-3 offset-4' %>
        <%= link_to 'Back', user_path(current_user), class: 'btn btn-light btn-block col-3 m-0' %>
    </div>
<% end %>